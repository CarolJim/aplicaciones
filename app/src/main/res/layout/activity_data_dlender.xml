<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DataDLender">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_arrow_back_24px"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/question"
        android:textSize="24sp"
        android:textColor="@color/com_facebook_button_background_color_pressed"
        android:textAlignment="center"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_estados"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="500dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp">
    </android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:id="@+id/ll_botones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right">


        <Button
            android:id="@+id/btn_continuar"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/selector_boton_principal"
            android:padding="10dp"
            android:text="@string/siguiente"
            android:textColor="@color/colorFondo"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>