<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DataDLender">

    <LinearLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryLigth"
        android:gravity="start|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorFondo"
            android:textSize="14sp"
            android:text="@string/registroP"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/menu">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_baseline_menu_24px"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="@null"
            android:src="@drawable/pasocompleto"/>

        <ImageView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="@null"
            android:src="@drawable/paso2on"/>

        <ImageView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="@null"
            android:src="@drawable/paso3off"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_infoP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/datos_del_domicilio"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_infoP_desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/indicaciones1"
            android:textColor="@color/colorMedio"
            android:textSize="14sp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:padding="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ed_calle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cuadro_texto"
                android:hint="@string/calle"
                android:inputType="textCapWords|textNoSuggestions"
                android:padding="8dp"
                android:textColor="@color/colorPrimaryLigth"
                android:textSize="12sp">

                <requestFocus/>
            </EditText>

            <LinearLayout
                android:id="@+id/ll_calle_adicional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/num_exterior"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/cuadro_texto"
                    android:hint="@string/n_exterior"
                    android:gravity="center"
                    android:padding="8dp"
                    android:inputType="textCapWords"
                    android:textColor="@color/colorPrimaryLigth"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/num_interior"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/cuadro_texto"
                    android:hint="@string/n_interior"
                    android:padding="8dp"
                    android:inputType="textCapWords"
                    android:textColor="@color/colorPrimaryLigth"
                    android:textSize="12sp"/>

                <EditText
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:focusable="false"
                    android:background="@drawable/cuadro_texto"
                    android:hint="@string/c_p"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:padding="8dp"
                    android:textColor="@color/colorPrimaryLigth"
                    android:textSize="12sp"/>
            </LinearLayout>

            <EditText
                android:id="@+id/ed_colonia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/cuadro_texto"
                android:padding="8dp"
                android:hint="@string/colonia"
                android:textColor="@color/colorPrimaryLigth"
                android:textSize="12sp"
                android:inputType="textCapWords|textNoSuggestions"
                android:focusable="false"/>

            <EditText
                android:id="@+id/ed_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/cuadro_texto"
                android:padding="8dp"
                android:hint="@string/tel_fijo"
                android:textSize="12sp"
                android:textColor="@color/colorPrimaryLigth"
                android:inputType="number"/>

            <EditText
                android:id="@+id/ed_celular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/cuadro_texto"
                android:hint="@string/tel_celular"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="@color/colorPrimaryLigth"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:background="@drawable/cuadro_texto"
                android:text="@string/pregunta1"
                android:textColor="@color/colorPrimaryLigth"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:checkedButton="@+id/rbsi"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbsi"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_horizontal"
                        android:text="SÃ­"
                        android:textColor="@color/colorPrimaryLigth"
                        android:textSize="12sp"/>

                    <RadioButton
                        android:id="@+id/rbno"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_horizontal"
                        android:text="No"
                        android:textColor="@color/colorPrimaryLigth"
                        android:textSize="12sp"/>
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_botones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp">

        <Button
            android:id="@+id/btn_cancelar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/selector_boton_principal"
            android:padding="10dp"
            android:text="@string/cancelar"
            android:textColor="@color/colorFondo"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_continuar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/selector_boton_principal"
            android:padding="10dp"
            android:textColor="@color/colorFondo"
            android:text="@string/continuar"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>