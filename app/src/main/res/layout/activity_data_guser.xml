<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DataGUser">

    <LinearLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryLigth"
        android:gravity="start|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorFondo"
            android:textSize="14sp"
            android:text="Registro Usuarios"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/menu">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_baseline_menu_24px"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="@null"
            android:src="@drawable/paso1on"/>

        <ImageView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="@null"
            android:src="@drawable/paso2off"/>

        <ImageView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="@null"
            android:src="@drawable/paso3off"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_infoP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/datos_personales"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_infoP_desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/indicaciones1"
            android:textColor="@color/colorMedio"
            android:textSize="14sp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:padding="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/ed_nombre_usu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cuadro_texto"
                android:hint="Nombre Completo"
                android:textColor="@color/colorPrimaryLigth"
                android:textSize="12sp"
                android:inputType="textCapWords|textNoSuggestions"
                android:singleLine="true"
                android:padding="8dp">
                <requestFocus/>
            </EditText>

            <EditText
                android:id="@+id/correo_usu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cuadro_texto"
                android:hint="Correo Electr칩nico"
                android:textColor="@color/colorPrimaryLigth"
                android:textSize="12sp"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:singleLine="true"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/ed_contrase침a_usu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cuadro_texto"
                android:hint="Contrase침a"
                android:textColor="@color/colorPrimaryLigth"
                android:textSize="12sp"
                android:inputType="textCapCharacters|textNoSuggestions"
                android:singleLine="true"
                android:padding="8dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/ed_confirma_con_usu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cuadro_texto"
                android:hint="Confirm Contrase침a"
                android:textColor="@color/colorPrimaryLigth"
                android:textSize="12sp"
                android:inputType="textCapCharacters|textNoSuggestions"
                android:singleLine="true"
                android:padding="8dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Login Status"
                android:gravity="center"
                android:id="@+id/tv_login"
                android:textStyle="bold"/>

            <com.facebook.login.widget.LoginButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_login_fb"
                android:layout_gravity="center"
                android:layout_marginTop="30dp">
            </com.facebook.login.widget.LoginButton>

            <com.google.android.gms.common.SignInButton
                android:id="@+id/btn_login_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

            </com.google.android.gms.common.SignInButton>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_botones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_cancelar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/selector_boton_principal"
            android:padding="10dp"
            android:text="@string/cancelar"
            android:textColor="@color/colorFondo"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_continuar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/selector_boton_principal"
            android:padding="10dp"
            android:textColor="@color/colorFondo"
            android:text="@string/continuar"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>