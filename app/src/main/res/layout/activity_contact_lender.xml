<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="false"
    tools:context=".ContactLenderActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_arrow_back_24px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:text="Datos de Contacto"
            android:textAlignment="center"
            android:textColor="@color/com_facebook_button_background_color_pressed"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_datos_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cuadro_texto"
            android:hint="Correo electrónico"
            android:padding="8dp"
            android:textColor="@color/colorPrimaryLigth"
            android:textSize="12sp">

            <requestFocus />
        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/cuadro_texto"
            android:hint="Número de celular"
            android:padding="8dp"
            android:textColor="@color/colorPrimaryLigth"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/tv_datos_cont"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/superhero" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_botones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        android:gravity="right">


        <Button
            android:id="@+id/btn_continuar"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/selector_boton_principal"
            android:padding="10dp"
            android:text="@string/siguiente"
            android:textColor="@color/colorFondo"
            android:textSize="12sp" />
    </LinearLayout>


</RelativeLayout>


